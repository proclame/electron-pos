{
  "name": "electron-pos",
  "version": "1.0.0",
  "main": "public/electron.js",
  "homepage": "./",
  "description": "A simple POS system built with Electron and React",
  "author": "Nick Mispoulier <nick.mispoulier@zumbawear.eu>",
  "license": "UNLICENSED",
  "repository": {},
  "scripts": {
    "start": "react-scripts start",
    "electron-start": "electron .",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://127.0.0.1:3000/ && electron .\"",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "electron-build": "electron-builder",
    "release": "npm run build && electron-builder --publish=never",
    "release2": "electron-builder --publish=never",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "fix": "npm run format && npm run lint:fix"
  },
  "dependencies": {
    "better-sqlite3": "^11.8.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "electron-is-dev": "^3.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router-dom": "^7.2.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^24.8.8",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.4",
    "prettier": "^3.5.2",
    "react-scripts": "5.0.1",
    "wait-on": "^8.0.2"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.electron.pos",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "pulbic/electron.js",
      "src/electron/**/*",
      "src/config/**/*",
      "models/**/*",
      "services/**/*",
      "migrations/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "models/database.sqlite",
        "to": "database.sqlite"
      }
    ]
  }
}
